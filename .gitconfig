[alias]
	amend = commit --amend
	df = diff
	dt = difftool
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[color]
	ui = auto
[commit]
	template = /home/xiaomin/.gitmessage
[core]
	editor = nvim
	excludesfile = /home/xiaomin/.gitignore_global
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[user]
	name = Xiaomin Liu
	email = xl4624@nyu.edu
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[pull]
	rebase = true
